@using Layqa.Service
@using Layqa.Service.Util
@using Layqa.Service.Dto
@model ArticleDto
@{
    ServiceArticle serviceArticle = new ServiceArticle();
    var lSection = serviceArticle.GetWebList(Model.ArticleId);
}
<!-- Services Section -->
<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">@Model.Title</h2>
                <h3 class="section-subheading text-muted">@Model.SubTitle</h3>
            </div>
        </div>
        <div class="row text-center">
        @foreach (var servicio in lSection)
        {
            var css = XMLReader.GetValue(servicio.XmlParams, "css");
            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa @css fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">@servicio.Title</h4>
                <p class="text-muted">@Html.Raw(servicio.Resumen)</p>
            </div>
        }
        </div>
    </div>
</section>
