@using Layqa.Service
@using Layqa.Service.Util
@using Layqa.Service.Dto
@model ArticleDto
@{
    ServicePost servicePost = new ServicePost();
    var lPost = servicePost.GetWebList();
}
<!-- Portfolio Grid Section -->
<section id="blog" class="bg-light-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">@Model.Title</h2>
                <h3 class="section-subheading text-muted">@Model.SubTitle</h3>
            </div>
        </div>
        <div class="row">
            @foreach (var post in lPost)
            {
                <div class="col-md-6 col-sm-6 portfolio-item">
                    <div class="portfolio-caption">
                        <a href="#" class="portfolio-link" data-toggle="modal">
                            <h4>@post.Title</h4>
                        </a>
                        <p class="text-muted">@Html.Raw(post.Resumen)</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
