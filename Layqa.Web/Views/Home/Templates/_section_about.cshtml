@using Layqa.Service
@using Layqa.Service.Util
@using Layqa.Service.Dto
@model ArticleDto
@{
    ServiceArticle serviceArticle = new ServiceArticle();
    var lSection = serviceArticle.GetWebList(Model.ArticleId);
}
<!-- About Section -->
<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">@Model.Title</h2>
                <h3 class="section-subheading text-muted">@Model.SubTitle</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="timeline">
                    @foreach (var servicio in lSection)
                    {
                        var align = XMLReader.GetValue(servicio.XmlParams, "align");
                        var image = XMLReader.GetValue(servicio.XmlParams, "image");
                        var css = (align != "" || align=="right") ? "timeline-inverted" : "";
                        <li class="@css">
                            <div class="timeline-image">
                                <img class="img-circle img-responsive" src="@image" alt="">
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <h4>@servicio.SubTitle</h4>
                                    <h4 class="subheading">@servicio.Title</h4>
                                </div>
                                <div class="timeline-body">
                                    <p class="text-muted">@Html.Raw(servicio.Resumen)</p>
                                </div>
                            </div>
                        </li>
                    }
                    <li class="timeline-inverted">
                        <div class="timeline-image">
                            <h4>
                                Se Parte
                                <br>De Nuestra
                                <br>Historia
                            </h4>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
