<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Zafiro CMS: Open Source Content Management System">
    <meta name="author" content="Fischer Tirado">
    <title>@ViewBag.Title - Zafiro CMS</title>
    @Styles.Render("~/admin/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Zafiro CMS", "Index", "Home", new { area = "Admin" }, new { @class = "navbar-brand" })
            </div>
            <!-- Top Menu Items -->
            @Html.Partial("_LayoutHead")
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            @Html.Partial("_LayoutMenu")
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">

            <div class="container-fluid">
                @RenderBody()

                <p>&nbsp;</p>
                <p>&nbsp;</p>
                <footer>
                    <p>&copy; @DateTime.Now.Year - <i>fishercom.org</i></p>
                </footer>
            </div>
            <!-- /.container-fluid -->

        </div>
    <!-- /#page-wrapper -->
</div>
<!-- /#wrapper -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/respond")
    @RenderSection("scripts", required: false)
    @RenderSection("custom", required: false)

</body>
</html>