<div id="DeleteContainer">
    @using (Html.BeginForm("DeleteAction", (string)ViewBag.Controller))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("Id", (int)ViewBag.Id)
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-hidden="true">
                    &times;
                </button>
                <h4>Eliminar Registro</h4>
            </div>
            <div class="modal-body">
                <div>
                    @Html.ValidationMessage("Error", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <p class="text-center">¿Esta seguro que desea eliminar <strong>@ViewBag.Title</strong>?</p>
                </div>
            </div>

            <div class="modal-footer">
                <input type="submit" value="Si, Elminiar" class="btn btn-danger" />
                @Html.ActionLink("No, Cancelar", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    }
</div>