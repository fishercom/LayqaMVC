@model Layqa.Web.Areas.Admin.Models.TemplateFormViewModel
@using Layqa.Service
@using Layqa.Service.Dto
@{
    ViewBag.Title = "Nuevo Esquema";
}
<div class="row">
    <div class="col-lg-12">

        <h2>@ViewBag.Title</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="SchemaParentId" value="@ViewBag.SchemaParentId" />

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.ValidationMessage("Error", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, labelText: "Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AdminView, labelText: "Vista Admin", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AdminView, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AdminView, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FrontView, labelText: "Vista Pública", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FrontView, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FrontView, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                @Html.EditorFor(model => model.IsSection)
                                @Html.ValidationMessageFor(model => model.IsSection)
                                Es Sección Principal
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                @Html.EditorFor(model => model.Active)
                                @Html.ValidationMessageFor(model => model.Active)
                                Activo
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-danger" />
                        @Html.ActionLink("Cancelar", "Index", new { SchemaId = ViewBag.SchemaId, SchemaParentId = ViewBag.SchemaParentId }, new { @class = "btn btn-primary" })
                    </div>
                </div>

            </div>
        }

    </div>
</div>
<!-- /.row -->

@section Scripts {
    @Scripts.Render("~/bundles/ckeditor")
    @Scripts.Render("~/bundles/jqueryval")
}
@section Custom {
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('Resumen',
            {
                toolbar: 'Basic',
                height: "100"
            });
        });
    </script>
}
