@model IEnumerable<Layqa.Web.Areas.Admin.Models.TemplateListViewModel>
@using Layqa.Service
@using Layqa.Service.Dto
@{
    ViewBag.Title = "Plantillas";
}
<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">

        <h2>
            @ViewBag.Title
        </h2>

        <p>
            <a href="@Url.Action("Create")" class="btn btn-success">Crear Plantilla</a>
        </p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AdminView)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FrontView)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdminView)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FrontView)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { Id = item.TemplateId })" class="btn btn-warning btn-sm"><i class="fa fa-fw fa-edit"></i> Editar</a>
                        <a href="@Url.Action("Delete", new { Id = item.TemplateId })" class="btn btn-danger btn-sm" data-ajax="true" data-ajax-method="Get" data-ajax-mode="replace" data-ajax-update="#DeleteForm" data-target="#DeleteForm" data-toggle="modal"><i class="fa fa-fw fa-trash"></i> Eliminar</a>
                    </td>
                </tr>
            }

        </table>

        <div id="DeleteForm"
             class="modal fade"
             tabindex="-1"
             role="dialog"
             aria-hidden="true">
        </div>

    </div>
</div>
<!-- /.row -->

@section Scripts{
    @Scripts.Render("~/bundles/unobtrusiveajax")
}
